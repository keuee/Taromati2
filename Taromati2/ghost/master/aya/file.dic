	if _h
		_temp=FUNHIDDEN(_argv[0])
	_temp=RUNCMD('COPY /B "'+_argv[0]+'" "'+_argv[1]+'"')
	if _h{
		_temp=FHIDDEN(_argv[0])
		_temp=FHIDDEN(_argv[1])
