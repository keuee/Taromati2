}
FWRITE_WITH_{
	FWRITE2(_argv[1],_argv[2]+_argv[0])
}
FWRITE_WITH_LF{
	FWRITE2(_argv[0],_argv[1]+C_LF)
}
FWRITE_WITH_CR{
	FWRITE2(_argv[0],_argv[1]+C_CR)
}
DELDIR{
	_attrib=FATTRIB(_argv[0])
	if _attrib!=-1{
		if _attrib[2]{
			_d=FENUM(_argv[0])
			foreach _d;_i{
				_temp=DELDIR(_argv[0]+'\'+_i)
			}
			_temp=RMDIR(_argv[0])
		}else{
			_temp=FDEL(_argv[0])
		}
	}
}
